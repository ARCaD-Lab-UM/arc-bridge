<mujoco model="pendulum">
    <compiler angle="radian" autolimits="true"/>

    <default>
        <default class="pendulum">
            <geom type="capsule" size="0.02" rgba="0.1 0.2 0.8 1"/>
            <joint axis="0 1 0" damping="0.1" armature="0.01"/>
        </default>
    </default>

    <keyframe>
        <key name="0" qpos="1" />
    </keyframe>

    <worldbody>
        <!-- Fixed base -->
        <body name="base" pos="0 0 1.5">
            <!-- Pendulum arm -->
            <body name="pendulum" pos="0 0 0">
                <joint name="hinge" type="hinge" axis="0 1 0" pos="0 0 0"/>
                <geom name="arm" type="capsule" fromto="0 0 0 0 0 -1" size="0.02"/>
                <!-- Point mass at the tip -->
                <body name="mass" pos="0 0 -1">
                    <geom name="tip_mass" type="sphere" size="0.05" density="1000"/>
                </body>
            </body>
        </body>
    </worldbody>

    <actuator>
        <motor name = "hinge_motor" joint="hinge" ctrlrange="-100 100" gear="1"/>
    </actuator>

    <sensor>
        <jointpos name="qjpos" joint="hinge"/>
        <jointvel name="qjvel" joint="hinge"/>
        <jointactuatorfrc name="qjtau" joint="hinge"/>
    </sensor>
</mujoco>