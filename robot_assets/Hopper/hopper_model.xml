<mujoco model="hopper_model">
  <compiler angle="radian" meshdir="meshes" autolimits="true" />
  <option cone="elliptic" impratio="100" />
  <statistic center="0 0 0.1" extent="0.8"/>
  
  <default>
    <default class="hopper">
      <geom friction="1.0" margin="0.001" condim="1"/>
      <joint axis="0 1 0" damping="0.1" armature="0.01" frictionloss="0.2"/>
      <motor ctrlrange="-30 30"/>
      <default class="hip">
        <joint range="0 1.5708"/>
      </default>
      <default class="knee">
        <joint range="-3.1415 -0.85"/>
      </default>
      <default class="visual">
        <geom type="mesh" contype="0" conaffinity="0" group="2"/>
      </default>
      <default class="collision">
        <geom group="3"/>
      </default>
    </default>
  </default>

  <keyframe>
    <key name="0" qpos="0 0 0 0.9 -1.8" />
  </keyframe>

  <worldbody>
    <light pos="0 0 1.5" dir="0 0 -1" directional="true"/>
    <geom name="floor" size="0 0 0.05" type="plane" material="groundplane"/>

    <body name="Base" pos="0 0 0.4" quat="1 0 0 0">
      <joint name="x_joint" type="slide" axis="1 0 0" range="-10 10" />
      <joint name="z_joint" type="slide" axis="0 0 1" range="-0.4 5" />
      <joint name="pitch_joint" type="hinge" axis="0 1 0"/>

      <body name="Torso" childclass="hopper"/>
      <geom type="mesh" mesh="Torso" material="metal" class="visual" />
      <geom size="0.25 0.0115 0.0115" pos="0 -0.012 0.06" quat="1 0 0 0" type="box" class="collision" />
      <inertial 
        pos="0.00012619 0.0021568 0.039743" 
        mass="2."
        diaginertia="0.025 0.05 0.025"
        />
      
      <site name="imu" pos="0 0 0" />
      
      <body name="Thigh" pos="0 -0.026 0">
        <joint name="thigh_joint" class="hip" axis="0 1 0"/>
        <geom type="mesh" mesh="Thigh" material="metal" class="visual"/>
        <geom size="0.025 0.015 0.09" pos="-0.01 0.015 -0.07" quat="1 0 0 0" type="box" class="collision" />
        <inertial pos="0.0010373 -0.0083556 -0.029921" quat="0.704019 0.0129996 0.00933427 0.710001" mass="0.41602" diaginertia="0.00119604 0.00104212 0.000210614"/>

        
        <body name="Shank" pos="0 0.013 -0.22">
          <joint name="calf_joint" class="knee" axis="0 1 0"/>
          <geom type="mesh" mesh="Shank" material="metal" class="visual"/>
          <geom size="0.015 0.01 0.11" pos="0 0 -0.07" quat="1 0 0 0" type="box" class="collision" />
          <inertial pos="-0.000239033 0.000233479 -0.0752972" quat="0.706961 -0.00204689 -0.00156268 0.707248" mass="0.116643" diaginertia="0.000594634 0.000591483 5.24161e-06"/>
          
          <body name="Foot" pos="0 0 -0.20193" quat="0.707105 0 0 -0.707108">
            <geom type="mesh" mesh="Foot" material="metal" class="visual"/>
            <geom size="0.015" pos="0 0 0" priority="1" condim="6"
            friction="1.0 0.02 0.01" class="collision"/>
            <inertial 
              pos="5.2042E-18 -4.2156E-19 -0.001849"
              mass="0.015263" 
              fullinertia="1.9449E-06 1.9397E-06 1.2829E-06 -1.3565E-24 1.158E-21 -2.4125E-22"
              />

            <site name="foot_site" pos="0 0 0" size="0.015"/>
          </body>
        </body>
      </body>
    </body>
  </worldbody>

  <actuator>
    <motor class="hip" name="thigh" joint="thigh_joint" />
    <motor class="knee" name="calf" joint="calf_joint" />
  </actuator>

  <sensor>
    <jointpos name="thigh_pos" joint="thigh_joint" noise="0.01"/>
    <jointpos name="calf_pos" joint="calf_joint" noise="0.01"/>

    <jointvel name="thigh_vel" joint="thigh_joint" noise="0.01"/>
    <jointvel name="calf_vel" joint="calf_joint" noise="0.01"/>

    <jointactuatorfrc name="thigh_torque" joint="thigh_joint" noise="0.01"/>
    <jointactuatorfrc name="calf_torque" joint="calf_joint" noise="0.01"/>

    <framequat name="imu_quat" objtype="site" objname="imu" noise="0.01"/>
    <gyro name="imu_gyro" site="imu" noise="0.01"/>
    <accelerometer name="imu_acc" site="imu" noise="0.01"/>
    
    <framepos name="frame_pos" objtype="site" objname="imu" noise="0.01"/>
    <framelinvel name="frame_vel" objtype="site" objname="imu" noise="0.01"/>

    <touch name="foot_force" site="foot_site" noise="0.01"/>
  </sensor>

  <visual>
    <headlight diffuse="0.6 0.6 0.6" ambient="0.3 0.3 0.3" specular="0 0 0"/>
    <rgba haze="0.15 0.25 0.35 1"/>
    <global azimuth="-130" elevation="-20"/>
  </visual>

  <asset>
    <texture type="skybox" builtin="gradient" rgb1="0.3 0.5 0.7" rgb2="0 0 0" width="512" height="3072"/>
    <texture type="2d" name="groundplane" builtin="checker" mark="edge" rgb1="0.2 0.3 0.4" rgb2="0.1 0.2 0.3"
      markrgb="0.8 0.8 0.8" width="300" height="300"/>
    <material name="groundplane" texture="groundplane" texuniform="true" texrepeat="5 5" reflectance="0.2"/>

    <material name="metal" rgba=".9 .95 .95 1" />
    <material name="black" rgba="0 0 0 1" />
    <material name="white" rgba="1 1 1 1" />
    <material name="gray" rgba="0.671705 0.692426 0.774270 1" />

    <mesh file="Torso.STL" />
    <mesh file="Thigh.STL" />
    <mesh file="Shank.STL" />
    <mesh file="Foot.STL" />
  </asset>

</mujoco>
